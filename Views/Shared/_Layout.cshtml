<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>

    <!-- CSS globales -->
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/site.css" />
    <link rel="stylesheet" href="~/Content/Layout.css" />


    @RenderSection("styles", required: false) <!-- 🔹 Aquí va -->
</head>
<body class="@(ViewBag.BodyClass ?? "")">
    <header class="bg-dark text-white p-2 d-flex justify-content-between align-items-center">
        <div>
            <h4 class="m-0">Sistema de Reservas FIEE</h4>
        </div>
        <div>
            @if (Session["UserName"] != null)
            {
                <span class="me-3">👤 @Session["UserName"] (@Session["UserRole"])</span>
                <a href="@Url.Action("Logout", "Account")" class="btn btn-sm btn-outline-light">
                    Cerrar Sesión
                </a>
            }
        </div>
    </header>

    <main class="@(ViewBag.BodyClass == "login-page" ? "" : "main-content")">
        @RenderBody()
    </main>



    <footer class="bg-dark text-white text-center py-2 mt-5">
        © @DateTime.Now.Year - ProyectoDistri2
    </footer>

    <!-- Scripts globales -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
    </>
</html>
