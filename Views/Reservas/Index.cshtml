@model List<ProyectoDistri2.Models.Espacio>

@{
    ViewBag.Title = "Espacios Disponibles";
}

<h2>Espacios Disponibles</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<p>
    @Html.ActionLink("Mi Historial de Reservas", "Historial", "Reservas", null, new { @class = "btn btn-info" })
</p>

<table class="table-modern">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Tipo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var espacio in Model)
        {
            <tr>
                <td>@espacio.Id</td>
                <td>@espacio.Nombre</td>
                <td>@espacio.Tipo</td>
                <td>
                    @Html.ActionLink(
                        "Reservar",
                        "Crear",
                        new { espacioId = espacio.Id },
                        new { @class = "btn btn-primary" }
                    )
                </td>
            </tr>
        }
    </tbody>
</table>

@section styles {
    <link rel="stylesheet" href="~/Content/UsuarioIndex.css" />
}
